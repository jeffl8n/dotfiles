# -*- muttrc -*-
#
# Composing & sending
#

set mime_forward			# Forward message as MIME attachments.
unset reply_self
set fast_reply
set include

# Spell checking with http://www.vim.org/scripts/script.php?script_id=195
# superceeded by inserting mail-specific settings into mail file format definition
set editor="/usr/bin/vim -s ~/.mutt/vim/commands"
set edit_headers			# Permit editting of message headers
set sendmail_wait=-1			# Don't wait around for sendmail.
set from = "$GMAIL_FROM"
set realname = "$GMAIL_NAME"
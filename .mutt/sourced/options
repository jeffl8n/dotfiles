# -*- muttrc -*-
#
# Options
#

set move=no				# Don't move to mbox folder
set noconfirmappend		# Just append, don't hassle me.
unset copy				# Don't save copies of outgoing messages since gmail handles this
unset record            # gmail automatically handles saving sent emails

set delete=ask-yes			# Ask before deleting, preselecting 'yes'
# set implicit_autoview=yes		# Autoview every MIME type with a copiousoutput entry in mailcap.

set forward_edit=ask-no
set text_flowed				# Enable format=flowed for text/plain.
set use_envelope_from=yes		# 
# set envelope_from			# To let mutt choose msmtp account.
set print_command="muttprint"
